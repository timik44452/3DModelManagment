<UserControl x:Class="Manager.CustomControls.ModelViewHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Manager.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>

        <Rectangle Grid.Column="1" Stroke="Black"/>
        <Rectangle Grid.Column="4" Stroke="Black"/>
        <Label Grid.Column="1" Content="Name" VerticalContentAlignment="Center"/>
        <Label Grid.Column="4" Content="State" VerticalContentAlignment="Center"/>
        <Label Grid.Column="5" Content="Type" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Grid.Column="6" Content="Added date" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</UserControl>
